<script>
// FUNCTION 1 — Change Something
function changeTheme() {
    document.body.style.background = "#e6ffe6";
}

// FUNCTION 2 — React to User Action
function toggleMessage() {
    let msg = document.getElementById("secret-message");
    msg.style.display = msg.style.display === "none" ? "block" : "none";
}

// FUNCTION 3 — Core JavaScript (event listener + DOM update)
let count = 0;
document.getElementById("clickCounterBtn").addEventListener("click", function () {
    count++;
    this.textContent = "Clicks: " + count;
});
</script>

